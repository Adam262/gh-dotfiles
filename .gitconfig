[branch]
	autosetuprebase = always
[color]
	ui = true
[user]
	name = Adam Barcan
	email = adam@greenhouse.io
[url "git@github.com:"]
  insteadOf = https://github.com/
[push]
	default = current
[alias]
	br = branch
	co = checkout
	cob = !git fetch origin master:master && git checkout -b
	cof = !git checkout `(git branch | fzf)`
	com = !git checkout master && git pull --rebase origin master
	fem = !git fetch origin master
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	rem = !git pull --rebase origin master
	reim = !git rebase -i origin master
	st = status
[merge]
	tool = vimdiff
[rerere]
	enabled = true
[core]
	excludesfile = ~/.gitignore
	editor = /usr/bin/vim
[init]
	templateDir = ~/.git-templates
